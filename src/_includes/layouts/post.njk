---
layout: layouts/base.njk
---
<progress class="progress progress-secondary scroll-progress w-[102%] left-[-1%] fixed bg-transparent z-50 top-0" value="0" max="100"></progress>
<script type="text/javascript" defer src="/scripts/scroll-progress.js"></script>
<div class="lg:mx-28 xl:mx-48 2xl:mx-64 p-2 md:p-12">
    <div class="text-center mb-8">
        <h1>{{ title }}</h1>
        <div class="flex flex-row content-center italic text-sm">
           <time class="flex-1 text-right">{{ date | readableDate }}</time>
            <div class="divider divider-horizontal"></div>
            <span class="flex-1 text-left"><i class="ri-hourglass-2-fill mr-1"></i>{{ content | readTime }}</span>
        </div>
        <div class="divider"><i class="ri-pen-nib-line"></i></div>
    </div>
    {% if image.path | length %}
        <div class="md:mx-6 md:float-left md:w-3/12">
            <img alt="{{ image.alt }}" class="border-black border-4" width="100%" src="/img/{{ image.path }}" fetchpriority="high">
            <p class="text-xs text-gray-500 text-center italic">{{ image.caption | safe }}</p>
        </div>
    {% endif %}
    <article>{{ content | safe }}</article>
    <div class="flex">
        <div class="flex-1"></div>
        <div class="flex flex-wrap flex-row">
            {% for tag in labels %}
                <a href="{{ ('/tags/' + tag | lower | slugify) }}">
                    <div class="badge badge-secondary mx-0.5 my-1 p-3">{{ tag | lower }}</div>
                </a>
            {% endfor %}
        </div>
    </div>
    <div id="comment-container">
        <div class="divider"><i class="ri-question-answer-line"></i></div>
        <span class="text-xl">Comments</span>
        <p>Please feel free to share your thoughts and questions about this post!</p>

        <div id="utterances-spinner" class="text-center">
            <span class="loading loading-spinner loading-lg"></span>
        </div>
        <script type="text/javascript" async src="/scripts/utterances.js"></script>
    </div>
    <div class="divider"><i class="ri-pen-nib-line"></i></div>
    <div class="text-right">
        <p class="m-0">Spotted a mistake?</p>
        <a href="https://github.com/JamesMcNee/static-blog-site/blob/{% commitShaOrBranch %}/{{ page.inputPath }}">Edit on GitHub <i class="ri-github-fill"></i></a>
    </div>
</div>